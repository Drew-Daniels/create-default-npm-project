{
  "name": "ts-project",
  "description": "Utility to easily scaffold a new TS project",
  "version": "0.1.0",
  "author": "Drew Daniels",
  "bugs": "https://github.com/Drew-Daniels/ts-project/issues",
  "main": "install.js",
  "bin": {
    "install": "install.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.2.0",
    "@eslint/js": "^9.33.0",
    "cspell": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jiti": "^2.5.1",
    "prettier": "3.6.2",
    "ts-node": "^10",
    "typescript": "^5",
    "typescript-eslint": "^8.39.1"
  },
  "homepage": "https://github.com/Drew-Daniels/ts-project",
  "license": "MIT",
  "type": "module",
  "repository": "Drew-Daniels/ts-project",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc --build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier 'src/**/*.ts'",
    "format:write": "prettier 'src/**/*.ts' --write",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
